<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="https://www.springframework.org/schema/beans"
	xmlns:context="https://www.springframework.org/schema/context"
	xmlns:mvc="https://www.springframework.org/schema/mvc"
	xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
	xmlns:schemaLocation="https://www.springframework.org/schema/beans 
	https://www.springframework.org/schema/beans/spring-beans.xsd 
	https://www.springframework.org/schema/context 
	https://www.springframework.org/schema/context/spring-context.xsd
	https://www.springframework.org/schema/mvc 
	https://www.springframework.org/schema/mvc/spring-mvc.xsd">
	<context:component-scan base-package="nstarlike.community" />
	<mvc:annotation-driven />
	
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/view" />
		<property name="suffix" value=".jsp" />
	</bean>
</beans>